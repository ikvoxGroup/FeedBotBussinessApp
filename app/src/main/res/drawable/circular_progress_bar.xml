<?xml version="1.0" encoding="utf-8"?>
<rotate
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="90"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360">

    <shape
        android:innerRadiusRatio="1.5"
        android:shape="ring"
        android:thicknessRatio="4.0">

        <gradient
            android:centerColor="#e7dbc0"
            android:endColor="#8ec540"
            android:startColor="#efd4bf"
            android:angle="0"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>